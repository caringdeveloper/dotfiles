# Internal laptop panel – HiDPI, centered below the ultrawide
#output eDP-1 {
#    mode 2880x1800@90Hz
#    scale 2
#    position 1053 1440
#}

# Left monitor – DP-2, rotated 270°, 1920x1080 @ 100 Hz
output DP-2 {
    mode 1920x1080@100Hz
    position 0 0
    transform 270
    scale 1
}

# Center monitor – DP-1, ultrawide 3440x1440 @ 144 Hz
output DP-1 {
    mode 3440x1440@144Hz
    position 1080 196
    transform normal
    scale 1
}

### Some useful tools ###

for_window [app_id="nm-connection-editor"] floating enable, move position center
for_window [app_id="blueman-manager"] floating enable, move position center

bindsym $mod+n exec nm-connection-editor
bindsym $mod+b exec blueman-manager

### Control the system ###
bindsym $mod+Shift+Escape exec "swaylock -f && systemctl suspend"
