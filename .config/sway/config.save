### BASIC SETTINGS ###

# Super as modifier
set $mod Mod4

# Terminal
set $term alacritty

# App launcher (bemenu)
#set $menu bemenu-run --fn "Sans 11" --nb "#1e1e2e" --nf "#cdd6f4" --hb "#313244" --hf "#f9e2af" --tb "#1e1e2e" --tf "#89b4fa"
set $menu j4-dmenu-desktop --dmenu='bemenu -i -l 20' --term='alacritty'

### KEYBOARD LAYOUT (GERMAN) ###

input * {
    xkb_layout "de"
}

### OUTPUT / BACKGROUND ###

# Solid color background (black); change if you want wallpaper
output * bg "#000000" solid_color

### AUTOSTART APPS ###

# Notifications
exec_always mako

# Waybar as the top bar
exec_always sh -c 'pkill waybar; waybar'

### BASIC KEYBINDINGS (i3-LIKE) ###

# Start terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+Shift+q kill

# App launcher
bindsym $mod+d exec $menu

# Reload config
bindsym $mod+Shift+c reload

# Exit Sway
bindsym $mod+Shift+e exit


### FOCUS MOVEMENT ###

# Vim-style
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


### MOVE WINDOWS ###

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


### SPLITS / LAYOUT ###

# Vertical / horizontal split
bindsym $mod+v splitv
bindsym $mod+Shift+v splith

# Toggle floating
bindsym $mod+Shift+space floating toggle

# Fullscreen
bindsym $mod+f fullscreen

# Focus parent / child
bindsym $mod+a focus parent
bindsym $mod+z focus child


### WORKSPACES ###

# Switch to workspaces that are not fixed
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10


### RESIZE MODE (LIKE I3) ###

mode "resize" {
    bindsym h resize shrink width 10px
    bindsym j resize grow height 10px
    bindsym k resize shrink height 10px
    bindsym l resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to normal mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Enter resize mode
bindsym $mod+r mode "resize"


### LOCK / IDLE (BASIC) ###

# Lock screen (you may need to configure swaylock-theme)
bindsym $mod+Escape exec swaylock -f

# Idle: lock after 5 min, turn off screen after 10
exec_always swayidle -w \
    #timeout 300 'swaylock -f' \
    #timeout 600 'swaymsg "output * dpms off"' \
    #resume 'swaymsg "output * dpms on"'


### MISC ###

# Starting Keyring
exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets

# Screenshot current screen
bindsym Print exec grim ~/Pictures/screenshot-$(date +'%Y-%m-%d-%H%M%S').png

# Screenshot selection
bindsym Shift+Print exec grim -g "$(slurp)" ~/Pictures/screenshot-$(date +'%Y-%m-%d-%H%M%S').png

# Fixed workspaces
set $ws1 "1:  Web"
set $ws2 "2:  Dev"
set $ws3 "3:  Music"
set $ws4 "4:  Communication"
set $ws5 "5:  Torrents"
set $ws6 "6:  Misc"

bindsym $mod+1 workspace $ws1
Rbindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6

# Fixing apps to default workspaces
assign [app_id="firefox-esr"] $ws1
assign [app_id="org.signal.Signal"] $ws4
assign [class="discord"] $ws4
assign [class="Spotify"] $ws3
assign [app_id="org.qbittorrent.qBittorent"] $ws5
assign [class="Code"] $ws2

### DISPLAY CONFIG ###

# External MSI MAG401QR – main screen, ultrawide on top
output DP-1 {
    mode 3440x1440@144Hz
    scale 1
    position 0 0
}

# Internal laptop panel – HiDPI, centered below the ultrawide
output eDP-1 {
    mode 2880x1800@90Hz
    scale 2
    position 1053 1440
}
